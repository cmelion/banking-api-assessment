# Banking API Environment Variables

# Application Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
# For development with Docker PostgreSQL
DATABASE_URL=postgresql://banking_user:banking_pass@localhost:5432/banking_db?schema=public
DIRECT_URL=postgresql://banking_user:banking_pass@localhost:5432/banking_db?schema=public

# For Vercel Postgres (production)
# DATABASE_URL=${POSTGRES_PRISMA_URL}
# DIRECT_URL=${POSTGRES_URL_NON_POOLING}

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Logging Configuration
LOG_LEVEL=info

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379

# API Configuration
API_VERSION=v1
CORS_ORIGIN=*

# Development Configuration
ENABLE_SWAGGER=true
ENABLE_CORS=true

# Production Security (set in production only)
# HTTPS_ONLY=true
# SECURE_COOKIES=true
# RATE_LIMIT_ENABLED=true

# External Error Reporting (Optional - works without subscription)
# Sentry can be used in free tier (5k errors/month) or disabled entirely
SENTRY_ENABLED=false
# SENTRY_DSN=https://your-dsn@sentry.io/project-id
# SENTRY_ENVIRONMENT=development